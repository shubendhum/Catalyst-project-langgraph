# Catalyst Backend Dockerfile - Artifactory Version
# Multi-stage build for optimized production image
# Build context: /app (root directory)

# Stage 1: Build stage
FROM artifactory.devtools.syd.c1.macquarie.com:9996/python:3.11-slim as builder

WORKDIR /app

# Set environment to bypass SSL verification for pip
ENV PYTHONHTTPSVERIFY=0
ENV PIP_TRUSTED_HOST="pypi.org files.pythonhosted.org pypi.python.org d33sy5i8bnduwe.cloudfront.net"

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files from backend directory
COPY backend/requirements.txt backend/requirements-langgraph.txt ./

# Configure pip to use public PyPI with SSL verification disabled
RUN pip config set global.index-url https://pypi.org/simple && \
    pip config set global.trusted-host pypi.org && \
    pip config set global.trusted-host files.pythonhosted.org && \
    pip config set global.trusted-host d33sy5i8bnduwe.cloudfront.net

# Install Python dependencies with SSL verification disabled
# Install requirements.txt from public PyPI
RUN pip install --no-cache-dir --upgrade pip --trusted-host pypi.org --trusted-host files.pythonhosted.org && \
    pip install --no-cache-dir --trusted-host pypi.org --trusted-host files.pythonhosted.org -r requirements.txt

# Install requirements-langgraph.txt with extra index for emergentintegrations
RUN pip install --no-cache-dir \
    --trusted-host pypi.org \
    --trusted-host files.pythonhosted.org \
    --trusted-host d33sy5i8bnduwe.cloudfront.net \
    --extra-index-url https://d33sy5i8bnduwe.cloudfront.net/simple/ \
    -r requirements-langgraph.txt

# HuggingFace Model Pre-download with SSL Workaround
# Strategy: Downgrade requests to 2.27.1 (better SSL handling in corporate proxies)
#           Download HuggingFace models
#           Upgrade requests back to 2.32.5 (required by dependencies)
RUN echo "Downloading HuggingFace models with requests 2.27.1 for SSL compatibility..." && \
    pip install --no-cache-dir requests==2.27.1 && \
    python3 -c "import os; os.environ['CURL_CA_BUNDLE'] = ''; os.environ['REQUESTS_CA_BUNDLE'] = ''; os.environ['SSL_CERT_FILE'] = ''; os.environ['HUGGINGFACE_HUB_DISABLE_SSL_VERIFICATION'] = '1'; os.environ['HF_HUB_DISABLE_TELEMETRY'] = '1'; import ssl; ssl._create_default_https_context = ssl._create_unverified_context; from sentence_transformers import SentenceTransformer; print('Downloading all-MiniLM-L6-v2...'); model = SentenceTransformer('all-MiniLM-L6-v2'); print('Model cached successfully!')" && \
    pip install --no-cache-dir requests==2.32.5 && \
    echo "HuggingFace models cached, requests upgraded to 2.32.5"

# Stage 2: Runtime stage
FROM artifactory.devtools.syd.c1.macquarie.com:9996/python:3.11-slim

WORKDIR /app

# Set environment to bypass SSL verification
ENV PYTHONHTTPSVERIFY=0
ENV PIP_TRUSTED_HOST="pypi.org files.pythonhosted.org pypi.python.org d33sy5i8bnduwe.cloudfront.net"

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code from backend directory
COPY backend/ /app/

# Create non-root user first
RUN useradd -m -u 1000 catalyst

# Copy HuggingFace model cache from builder to catalyst's home
# Models were downloaded during build to avoid SSL issues at runtime
COPY --from=builder /root/.cache/huggingface /home/catalyst/.cache/huggingface

# Set permissions for all catalyst-owned directories
RUN chown -R catalyst:catalyst /app && \
    chown -R catalyst:catalyst /home/catalyst/.cache

USER catalyst

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8001/api/ || exit 1

# Start application
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8001"]
