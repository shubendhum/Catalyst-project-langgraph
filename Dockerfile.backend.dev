# Catalyst Backend - Development Dockerfile
# Optimized for development with hot reload

FROM python:3.11-slim

# Metadata
LABEL maintainer="Catalyst AI Platform"
LABEL version="1.0.0-dev"
LABEL description="Catalyst Backend API - Development"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    curl \
    wget \
    git \
    vim \
    procps \
    net-tools \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app/backend

# Copy requirements first for better caching
COPY backend/requirements.txt .

# Upgrade pip and install Python dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Install emergentintegrations from custom index
RUN pip install --no-cache-dir emergentintegrations \
    --extra-index-url https://d33sy5i8bnduwe.cloudfront.net/simple/

# Install development tools
RUN pip install --no-cache-dir \
    black \
    isort \
    flake8 \
    mypy \
    pytest-watch \
    ipython \
    ipdb

# Copy backend source code
COPY backend/ .

# Create necessary directories
RUN mkdir -p agents orchestrator connectors logs temp uploads

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8001/api/ || exit 1

# Run with hot reload for development
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8001", "--reload", "--log-level", "debug"]